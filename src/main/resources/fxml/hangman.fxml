<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="dictionary.sub_ui.controller.Game_Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane prefHeight="650.0" prefWidth="800.0">
        <Button id="startHangman" layoutX="300.0" layoutY="496.0" mnemonicParsing="false" onAction="#changeScene"
                prefHeight="59.0" prefWidth="225.0" text="Bắt đầu chơi" textFill="#d0184c">
            <font>
                <Font name="System Bold" size="29.0"/>
            </font>
        </Button>
        <Label layoutX="201.0" layoutY="25.0" prefHeight="70.0" prefWidth="415.0" text="HANGMAN GAME"
               textFill="#1331ab">
            <font>
                <Font name="System Bold" size="48.0"/>
            </font>
        </Label>
        <Label layoutX="149.0" layoutY="610.0" prefHeight="26.0" prefWidth="548.0"
               text="Luật: Bạn có 2 gợi ý. Mục tiêu là thử từng chữ cái để ghép thành từ cần tìm ">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <ImageView fx:id="cover_img" fitHeight="424.0" fitWidth="510.0" layoutX="157.0" layoutY="95.0"
                   pickOnBounds="true" preserveRatio="true">
            <viewport>
                <Rectangle2D/>
            </viewport>
            <effect>
                <ColorAdjust brightness="-0.04"/>
            </effect>
            <Image url="@../image/hangman0.png"/>
        </ImageView>
    </Pane>
</GridPane>
